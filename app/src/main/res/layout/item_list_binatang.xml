<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
            android:background="@drawable/background_binatang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/imgGambarBinatang"
                android:src="@drawable/gajah"
                android:layout_width="50pt"
                android:layout_height="50pt"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                        android:id="@+id/txtNama"
                        android:text="Gajah"
                       android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/txtDsc"
                        android:layout_marginLeft="10dp"
                        android:text="Gajah sedang bermain bola. Gajah makan rumput dan mempunyai belalai yang panjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>